{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "removeComments": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}
